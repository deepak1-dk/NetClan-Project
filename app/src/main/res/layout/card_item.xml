            android:elevation="8dp"
            android:progress="20"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="12dp"
            android:progressDrawable="@drawable/drawable_view_progress_batch"
            app:srcCompat="@drawable/drawable_view_progress_batch"
            tools:progress="64"/>

