<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:gravity="top"
    android:background="@drawable/backgroundnavdrower"
    android:padding="16dp">
    
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/baseline_person_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:layout_marginLeft="150dp"
            android:background="@color/white"
            android:src="@drawable/baseline_settings_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:textSize="20dp"
        android:text="Deepak Khatana"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="15dp"
        android:text="DDNOID00R8040"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/pb_view_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="110dp"
        android:layout_height="12dp"
        android:max="100"
        android:elevation="8dp"
        android:progress="20"
        android:layout_marginTop="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="12dp"
        android:progressDrawable="@drawable/drawable_view_progress_batch"
        app:srcCompat="@drawable/drawable_view_progress_batch"
        tools:progress="64">

    </ProgressBar>



    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:text="Available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>